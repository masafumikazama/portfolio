<% provide(:title, @user.name) %>

<% if current_user.admin? %>
　<div class="center jumbotron">
  　<h1>管理者専用</h1>
  </div>
<% else %>

<% if current_user.level == "上級" %>
   <%= render 'users/zyokyu_show' %>
<% elsif current_user.level == "中級" %>
   <%= render 'users/chukyu_show' %>
<% else %>

<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>【<%= l(@first_day, format: :middle) %>】オンラインレスン表</td>
      <td>指定勤務時間</td>
      <td>基本時間</td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>レベル：<%= @user.level.present? ? @user.level : "初級" %></td>
      <td>名前：<%= @user.name %><br>
                <%= link_to "Line Chat", line_chat_user_path, class: "btn btn-primary" %>
                <%= link_to "テスト結果", test_results_user_path, class: "btn btn-primary" %>
                <%= link_to "質問する", question_user_path, class: "btn btn-primary" %>
      </td>
      <td>出勤日数：<%= @worked_sum %></td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
  <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-info" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付 / 曜日</th>
        <th>10:00 - 11:00</th>
        <th>15:30 - 16:30</th>
        <th>16:30 - 17:30</th>
        <th>本日のテスト</th>
        <th>備考</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
      　<tr>
        　<td width="200"><%= l(day.worked_on, format: :short) %> / <%= $days_of_the_week[day.worked_on.wday] %><br>
        
            <% if btn_text = attendance_state(day) %>
              <%= link_to "受講する", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %><br>
            
            <% if $days_of_the_week[day.worked_on.wday] == "月" %>
              <%= @sub_course_content %>
            <% end %> 
        　</td>
 
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %>
          　<% if $days_of_the_week[day.worked_on.wday] == "月" %>
              <%= @mon_course_content1 %>
            <% end %> 
          </td>
          
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %>
          　<% if $days_of_the_week[day.worked_on.wday] == "月" %>
              <%= @mon_course_content2 %>
            <% end %>
          </td>
          
          <td>
            <% if $days_of_the_week[day.worked_on.wday] == "月" %>
              <%= @mon_course_content3 %>
            <% end %>
            
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= str_times = working_times(day.started_at, day.finished_at) %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% end %>
          </td>
          <td><% if btn_text = attendance_state(day) %>
              　<%= link_to "本日のテストを受講する", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            　<% end %></td>
          <td>本日は祝日の為お休みですなど。</td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>   
  </table>
</div>

<% end %>
<% end %>

<h1>生徒検索</h1>
<div class="col-md-4">
  <%= form_with url: search_students_users_path, method: :get, local: true do |f| %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.submit :名前検索, class: "btn btn-primary" %>
  <% end %>
<table class="table table-bordered">
  <thead>
    <tr>
      
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>名前：<%= user.name %><br>
            メールアドレス：<%= user.email %><br>
            クラス：<%= user.level %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="col-md-4">
  <%= form_with url: search_students_users_path, method: :get, local: true do |f| %>
   <%= f.select :level, [["",""],["初級", "初級"],["中級", "中級"],["上級", "上級"]], {}, {class: "form-control"} %>
   <%= f.submit :クラス検索, class: "btn btn-primary" %>
  <% end %>
<table class="table table-bordered">
  <thead>
    <tr>
      
    </tr>
  </thead>
  <tbody>
    <% @levels.each do |user| %>
      <tr>
        <td>名前：<%= user.name %><br>
            メールアドレス：<%= user.email %><br>
            クラス：<%= user.level %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

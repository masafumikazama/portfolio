<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">質問への回答</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          
          
          <%= form_with(model: @inquiry, url: inquiries_create_user_path, local: true, method: :post) do |f| %>
            <%= f.label :回答, class: "label-#{yield(:class_text)}" %>
            <%= f.text_area :answer, class: "form-control" %>
          
            <div class="center">
              <%= f.submit "送信する", class: "btn btn-primary" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
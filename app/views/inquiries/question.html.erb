<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @inquiriy, url: inquiries_create_user_path, local: true, method: :post) do |f| %>
     <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :質問はこちら, class: "label-#{yield(:class_text)}" %>
      <%= f.text_area :content, class: "form-control" %>
    
      <%= f.submit "送信する", class: "btn btn-primary" %>
   <% end %>
   
   <div align="center">
     <%= link_to "先生からの回答", edit_question_user_path, remote: true, class: "btn btn-success" %>
   </div>
   <div id="edit-question" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
   
  </div>
</div>